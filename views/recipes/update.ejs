<%- include('../partials/header.ejs') %>


<%- include('../partials/nav.ejs') %>

<main class="main">
<%- include('../partials/sidebar.ejs') %>

<div class="contents">
  <h2 class="mb-5">Update this Recipe</h2>
  <img class="recipe-img-details" src="/<%= recipe.picture %>">
    <form action="/recipes/update" method="POST">
      <input type="hidden" name="id" value="<%-recipe._id %>">
      <label for="recipe_name">Recipe Name:</label>
      <input type="text" id="recipe_name" name="recipe_name" value="<%= recipe.recipe_name %>" required>
      <label for="ingredients">Ingredients:</label>
      <textarea id="ingredients" name="ingredients" required><%= recipe.ingredients %></textarea>
      <label for="directions">Directions:</label>
      <textarea id="directions" name="directions" required><%= recipe.directions %></textarea>
      <!-- <label for="picture">Upload a recipe picture</label>
      <input type="file" id="picture" name="picture"><br> -->
      <button type="submit" class="submit-btn">Submit</button>
    </form>
  </div>

</main>

<%- include('../partials/footer.ejs') %>