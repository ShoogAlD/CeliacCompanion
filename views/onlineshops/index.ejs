<%- include('../partials/header.ejs') %>


<%- include('../partials/nav.ejs') %>

<div class="onlineshops content">
    <h2>All Online Shops</h2>

    <% if (onlineshops.length > 0) { 
          onlineshops.forEach(onlineshop => { %>
            <div class="onlineshop">
             <a class="single" href="/onlineshops/<%= onlineshop._id %>">
              <img class="onlineshop-img" src="/<%= onlineshop.logo %>">
              <h3 class="shopname"><%= onlineshop.shop_name %></h3>
             </a>
            </div>
      <% }) } else { %>
      <p>There are no online shops to display...</p>
      <% } %>
    
</div>

<%- include('../partials/footer.ejs') %>
